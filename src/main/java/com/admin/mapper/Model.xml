<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">   
  
<mapper namespace="com.admin.entity.Model">
      <!-- 自动生成id策略 -->
    <insert id="add" parameterType="com.admin.entity.Model" useGeneratedKeys="true" keyProperty="id">  
       	insert into tb_model(category_id,name,sort) values (#{m.category_id},#{m.name},#{m.sort})  
    </insert>  
	
	<delete id="del" parameterType="com.admin.entity.Model">
		delete from tb_model where id = #{id}
	</delete>
	
	<update id="upd" parameterType="com.admin.entity.Model">
		update tb_model set
			   category_id = #{m.category_id},
			   name = #{m.name},
			   sort = #{m.sort}
		where id = #{m.id}
	</update>

	<resultMap type="com.admin.entity.Model" id="result">
		<id property="m.id" column="id"/>
		<result property="m.category_id" column="category_id"/>
		<result property="m.name" column="name"/>
		<result property="m.sort" column="sort"/>
		<result property="m.category_name" column="category_name"/>
	</resultMap>
  	
	<sql id="columns_l">
		t.id id, t.category_id category_id, t.name name, t.sort sort, t1.name category_name
	</sql>
	<sql id="columns_o">
		t.id, t.category_id, t.name, t.sort
	</sql>
	
	<sql id="order">
		<choose>
			<when test="sort!=null and sort!=''">
				order by CONVERT(tt.${sort} USING gbk) ${order}
			</when>
			<when test="multiSort!=null and (sort==null or sort=='')">
				order by <foreach collection="multiSort" index="index" item="item" separator=",">CONVERT(tt.${item.sortName} USING gbk) ${item.sortOrder}</foreach>  
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</sql>
	
	<sql id="page">
		<if test="offset!=null and limit!=null"> limit #{offset,javaType=String,jdbcType=NUMERIC}, #{limit,javaType=String,jdbcType=NUMERIC} </if>
	</sql>
	
	<sql id="dynamicWhere">
		<where>
			<if test="category_id != null and category_id != ''"> and t.category_id = #{category_id} </if>
			<if test="category_ids != null and category_ids != ''"> and t.category_id in
			    <foreach collection="category_ids" index="index" item="item" open="(" separator="," close=")">   
			      #{item}   
			    </foreach> 
			</if>
			<if test="name != null and name != ''"> and t.name like concat('%',#{name},'%') </if>
			<if test="search != null and search != ''"> and (t.id like concat('%',#{search},'%') or t.name like concat('%',#{search},'%'))</if>
		</where>
	</sql>
	
	<select id="get" resultMap="result">
		select <include refid="columns_o"/> from tb_model t where t.id = #{id}
	</select>
	
	<select id="query" resultType="list" resultMap="result">
		select tt.* from
		(
			select <include refid="columns_l"/> from tb_model t
			  left join tb_category t1 on t.category_id = t1.id
			<include refid="dynamicWhere" />
		) tt
		<include refid="order" />
		<include refid="page" />
	</select>
	
	<select id="getCount" resultType="int">
		select count(1) from tb_model t
		<include refid="dynamicWhere" />
	</select>
</mapper>  
